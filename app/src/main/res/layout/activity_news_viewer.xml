<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.contus.keerthi.myapp.NewsViewerActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_toolbar"
        android:background="@drawable/side_nav_bar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actBackbtn"
            android:src="@drawable/ic_arrow_back_white_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsTitleText"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:id="@+id/readnewsimage"
        android:layout_below="@+id/news_toolbar"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readnewsimage"
        android:id="@+id/read_news_title"
        android:textSize="20sp"
        android:maxLines="3"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_news_des"
        android:layout_below="@+id/read_news_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left"
        android:maxLines="6"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Story"
        android:autoLink="web"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/read_news_des"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:id="@+id/read_news_full_story"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/share_variant"
        android:background="@drawable/btnbg"
        android:drawablePadding="5dp"
        android:text="Share"
        android:textStyle="bold"
        android:layout_below="@+id/read_news_des"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:id="@+id/read_share"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
